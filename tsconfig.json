{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration":true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": false,
    "jsx":"react",
    "outDir":"./build"
  },
  "include":[
    "src/**/*"
  ],
  "exclude": ["node_modules","example"]
}